<html>
  <head>
    <title><%=title%></title>
    <!-- use noty cdn link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <!-- add jquery cdn -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    
    <link rel="stylesheet" href="/CSS/layout.css" class="rel" />
    <link rel="stylesheet" href="/CSS/header.css" class="rel" />
    <link rel="stylesheet" href="/CSS/footer.css" class="rel" />

    <%- style %>
  </head>
  <body>
    <%- include("_header");%>
    <!-- flash message -->
    <main id="layout-main"><%- body%></main>
    <%- include("_footer");%> <%- script %>
    <script>
      <% if (flash.success && flash.success.length > 0) {%>
          new Noty({
              theme: 'relax',
              text: "<%= flash.success %>",
              type: 'success',
              layout: 'topRight',
              timeout: 1500
              
          }).show();    
      <%} %>

      <% if (flash.error && flash.error.length > 0) {%>
          new Noty({
              theme: 'relax',
              text: "<%= flash.error %>",
              type: 'error',
              layout: 'topRight',
              timeout: 1500
              
          }).show();    
      <%} %>
  </script>
  </body>
</html>
